@model IEnumerable<Carnation.Models.Product>

@{
    ViewData["Title"] = "Index";
}

@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
         body {
            background-image: url("/images/prbg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
           
        }
    </style>
</head>
<body>
    <div class="align-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: rgba(0,0,0,0.5) !important;top:0">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Carnation</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-link" href="@Url.Action("Index","Products")">Buy Now</a>
                    <a class="nav-link" href="@Url.Action("Create","SimpleUserRegisters")">Sign Up</a>
                    <a class="nav-link" href="@Url.Action("Login","Account")">Login</a>
                    <a class="nav-link" href="@Url.Action("Create","Feedbacks")">Feedback</a>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("usertype") == "merchant" || HttpContextAccessor.HttpContext.Session.GetString("usertype") == "admin")
                    {
                <a class="nav-link" href="@Url.Action("Index","MerchantUserRegisters")">Business Account🔑</a>}
                    @if (HttpContextAccessor.HttpContext.Session.GetString("usertype") == "simple" || HttpContextAccessor.HttpContext.Session.GetString("usertype") == "admin")
                    {
                <a class="nav-link" href="@Url.Action("Index","SimpleUserRegisters")">My Account🔑</a>}
                    <a class="nav-link" href="@Url.Action("LogOut","Account")">LogOut</a>
                </div>
            </div>
        </nav>
    </div>


    <h1 class="display-4">Buy Cars </h1>

    <p>
        @if (HttpContextAccessor.HttpContext.Session.GetString("usertype") == "merchant" || HttpContextAccessor.HttpContext.Session.GetString("usertype") == "admin")
        {
            <a asp-action="Create">Sell Car</a>

        }

    </p>
    <table class="table table-bordered">


        <thead style="background-color:lightgray">
            <tr class="bg-danger">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PCompany)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PQuality)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ProductPic)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                if (HttpContextAccessor.HttpContext.Session.GetString("usertype") == "merchant")
                {

                    if (HttpContextAccessor.HttpContext.Session.GetString("username") == item.UName)
                    {
            <tr>

                <td style="color:maroon;font-weight:bold">
                    @Html.DisplayFor(modelItem => item.PName)
                </td>
                <td style="color:maroon;font-weight:bold">
                    @Html.DisplayFor(modelItem => item.PCompany)
                </td>
                <td style="color:maroon;font-weight:bold">
                    @Html.DisplayFor(modelItem => item.PQuality)
                </td>

                <td style="color:maroon;font-weight:bold">
                    <img src="~/images/@item.PPicture" width="150" height="150" />
                </td>
                <td style="color:maroon">
                    <a style="color:black" asp-action="Edit" asp-route-id="@item.PId">Edit</a> |
                    <a style="color:green" asp-action="Details" asp-route-id="@item.PId">Details</a> |
                    <a style="color:red" asp-action="Delete" asp-route-id="@item.PId">Delete</a> |
                </td>
            </tr>
                    }

                }

                else if (HttpContextAccessor.HttpContext.Session.GetString("usertype") == "admin")
                {
                    <tr>

                        <td style="color:maroon;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.PName)
                        </td>
                        <td style="color:maroon;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.PCompany)
                        </td>

                        <td style="color:maroon;font-weight:bold">
                            <img src="~/images/@item.PQuality" width="150" height="150" />
                        </td>
                        <td style="color:maroon">
                            <a style="color:black" asp-action="Edit" asp-route-id="@item.PId">Edit</a> |
                            <a style="color:green" asp-action="Details" asp-route-id="@item.PId">Details</a> |
                            <a style="color:red" asp-action="Delete" asp-route-id="@item.PId">Delete</a> |
                        </td>
                    </tr>
                }
                else
                {
                    <tr>

                        <td style="color:maroon;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.PName)
                        </td>
                        <td style="color:maroon;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.PCompany)
                        </td>

                        <td style="color:maroon;font-weight:bold">
                            <img src="~/images/@item.PQuality" width="150" height="150" />
                        </td>
                        <td style="color:maroon;font-weight:bold">
                            <a style="color:green" asp-action="Details" asp-route-id="@item.PId">Details</a> |
                        </td>
                    </tr>


                }


            }
        </tbody>




    </table>
    <br />

</body>
<br />
